<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="recipe"
            type="com.example.kotlin.anative.nyanc0.nativekotlinsample.domain.model.Recipe" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="@dimen/space_s"
        android:foreground="?android:attr/selectableItemBackground">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/space_m">

            <com.example.kotlin.anative.nyanc0.nativekotlinsample.presentation.common.view.LoadingImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                app:loadImage='@{recipe.imageUrl}' />

            <TextView
                android:id="@+id/ic_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:layout_marginTop="@dimen/space_m"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/label_recommend"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_s"
                android:visibility="@{recipe.recommendFlg.isRecommend ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_image"
                app:layout_goneMarginTop="0dp" />


            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_m"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingEnd="@dimen/space_m"
                android:paddingStart="@dimen/space_m"
                android:text="@{recipe.recipeName}"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_size_n"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ic_recommend"
                tool:text="オムライスオムライスオムライスオムライスオムライス" />

            <TextView
                android:id="@+id/recipe_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_m"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:paddingEnd="@dimen/space_m"
                android:paddingStart="@dimen/space_m"
                android:text="@{recipe.introduction}"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/text_size_s"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipe_name"
                tool:text="おすすめおすすめおすすめおすすめおすすめおすすめおすすめおすすめおすすめ" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>