<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="method"
            type="com.example.kotlin.anative.nyanc0.nativekotlinsample.domain.model.CookingMethod" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_s">

        <TextView
            android:id="@+id/text_no"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/bg"
            android:gravity="center"
            android:padding="@dimen/space_s"
            android:text="@{method.procedure_no}"
            android:textSize="@dimen/text_size_m"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/text_procedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_s"
            android:gravity="center_vertical"
            android:padding="@dimen/space_s"
            android:text="@{method.procedure}"
            android:textSize="@dimen/text_size_m"
            app:layout_constraintTop_toBottomOf="@+id/text_no"
            tools:text="hogehoge" />

    </android.support.constraint.ConstraintLayout>
</layout>