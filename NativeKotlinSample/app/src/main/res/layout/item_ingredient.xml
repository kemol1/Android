<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="ingredient"
            type="com.example.kotlin.anative.nyanc0.nativekotlinsample.domain.model.CookingIngredients" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space_s">

        <TextView
            android:id="@+id/text_material"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/space_s"
            android:text="@{ingredient.material}"
            android:textSize="@dimen/text_size_m"
            tools:text="卵" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_s"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="@dimen/space_s"
            android:text="@{ingredient.quantity}"
            android:textSize="@dimen/text_size_m"
            tools:text="4個" />

    </LinearLayout>
</layout>